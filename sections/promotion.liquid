{{ 'component-promotion.css' | asset_url | stylesheet_tag }}

<style>
  .component-{{section.id}} {
    background-color: {{ section.settings.background_color }};
  }

  .component-{{section.id}} h2, .component-{{section.id}} h5 {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
}

.component-{{section.id}} a {
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
}
</style>

<div class="component component-{{section.id}} page-width promotion-section">
  <h2 class="h1">{{ section.settings.header }}</h2>
  <h5>{{ section.settings.promo }}</h5>
  <a class="button" href="{{ section.settings.btn_link }}">
    {{ section.settings.button_text }}
  </a>
</div>

{% schema %}
{
  "name": "Promotion Section",
  "tag": "section",
  "class": "promotion-section",
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Header",
      "default": "Get 20% off all sale items"
    },
    {
      "type": "text",
      "id": "promo",
      "label": "Promo Text",
      "default": "Use code EXTRA at checkout"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#0B5B4B"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#0B5B4B"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Promotion Section"
    }
  ]
}
{% endschema %}
